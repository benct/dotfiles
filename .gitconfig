[user]
    email = ben@tomlin.no
    name = benct

[push]
    default = simple

[alias]
    st = status
    ci = commit
    pr = pull --rebase
    pra = pull --rebase --autostash
    co = checkout
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lol = log --find-copies-harder --graph --abbrev=4 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen%ai %n %C(bold blue)%aN%Creset %B'

[apply]
    whitespace = strip

[diff]
    color = auto
    rename = copy

[pager]
    color = true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold # line info
    old = red # deletions
    new = green # additions

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[status]
    color = auto

[core]
    autocrlf = input

[help]
    autocorrect = 1
